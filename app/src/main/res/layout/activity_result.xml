<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.example.financecalculator.viewmodel.LoanViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_personal_monthly_installment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personal Loan Monthly Installment: " />

        <TextView
            android:id="@+id/tv_housing_monthly_installment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Housing Loan Monthly Installment: " />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Input" />
    </LinearLayout>
</layout>
